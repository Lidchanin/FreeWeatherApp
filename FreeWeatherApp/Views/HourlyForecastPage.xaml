<?xml version="1.0" encoding="utf-8"?>

<views:BasePage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:FreeWeatherApp.Views;assembly=FreeWeatherApp"
    xmlns:viewModels="clr-namespace:FreeWeatherApp.ViewModels;assembly=FreeWeatherApp"
    mc:Ignorable="d"
    x:Class="FreeWeatherApp.Views.HourlyForecastPage">

    <views:BasePage.BindingContext>
        <viewModels:HourlyForecastViewModel x:Name="ViewModel" />
    </views:BasePage.BindingContext>

    <views:BasePage.Content>
        <CollectionView ItemsSource="{Binding ForecastData}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout
                    Orientation="Vertical"
                    SnapPointsAlignment="Center"
                    SnapPointsType="None" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <FlexLayout Direction="Row"
                                JustifyContent="SpaceEvenly"
                                Wrap="Wrap">
                        <Label Text="{Binding DateTime, StringFormat='{}{0:d/M/yyyy _ hh:mm}'}" 
                               FlexLayout.AlignSelf="Center"/>
                        <Label Text="{Binding ApparentTemperature, StringFormat='ApparentTemperature = {0}   '}" />
                        <Label Text="{Binding CloudCover, StringFormat='CloudCover = {0}   '}" />
                        <Label Text="{Binding DewPoint, StringFormat='DevPoint = {0}   '}" />
                        <Label Text="{Binding Humidity, StringFormat='Humidity = {0}   '}" />
                        <Label Text="{Binding Ozone, StringFormat='Ozone = {0}   '}" />
                        <Label Text="{Binding PrecipIntensity, StringFormat='PrecipIntensity = {0}   '}" />
                        <Label Text="{Binding PrecipProbability, StringFormat='PrecipProbability = {0}   '}" />
                        <Label Text="{Binding PrecipType, StringFormat='PrecipType = {0}   '}" />
                        <Label Text="{Binding Pressure, StringFormat='Pressure = {0}   '}" />
                        <Label Text="{Binding Summary, StringFormat='Summary = {0}   '}" />
                        <Label Text="{Binding Temperature, StringFormat='Temperature = {0}   '}" />
                        <Label Text="{Binding UvIndex, StringFormat='UvIndex = {0}   '}" />
                        <Label Text="{Binding Visibility, StringFormat='Visibility = {0}   '}" />
                        <Label Text="{Binding WindBearing, StringFormat='WindBearing = {0}   '}" />
                        <Label Text="{Binding WindGust, StringFormat='WindGust = {0}   '}" />
                        <Label Text="{Binding WindSpeed, StringFormat='WindSpeed = {0}   '}" />
                        <Image 
                            HeightRequest="100"
                            WidthRequest="100"
                            Source="template_weather_img1_thumbnail.png"></Image>
                    </FlexLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </views:BasePage.Content>
</views:BasePage>