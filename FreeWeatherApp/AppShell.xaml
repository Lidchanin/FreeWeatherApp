    <FlyoutItem
        Route="hourly_forecast"
        Title="HourlyForecast">
        <Tab>
            <ShellContent>
                <views:HourlyForecastPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>

    <FlyoutItem
        Route="today_forecast"
        Title="TodayForecast">
        <Tab>
            <ShellContent>
                <views:TodayForecastPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>

    <FlyoutItem
        Route="week_forecast"
        Title="WeekForecast">
        <Tab>
            <ShellContent>
                <views:WeekForecastPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>

    <FlyoutItem
        Route="options"
        Title="Options">
        <Tab>
            <ShellContent>
                <views:OptionsPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>

    <FlyoutItem
        Route="credits"
        Title="Credits">
        <Tab>
            <ShellContent>
                <views:CreditsPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
</Shell>